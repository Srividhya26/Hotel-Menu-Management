@model IEnumerable<Menu>

@{
    ViewData["Title"] = "Index";

}

<div class="row">
    <div class="col-10">
        <h4 class="text=center"> Menu Items </h4>
    </div>
    <div class="col-2">
        <a asp-controller="Menu" asp-action="Create" class="btn btn-primary"> Add New Item </a>
    </div>
</div>

<div class="card-deck">

    @foreach (var menu in Model)
    {
        var photoPath = "~/images/" + (menu.Photo ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@menu.DishName</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="Menu" asp-action="Details" asp-route-id="@menu.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-controller="Menu" asp-action="Update" asp-route-id="@menu.Id"
                   class="btn btn-primary m-1"> Edit </a>
                <a class="btn btn-primary m-1" asp-action="Delete" asp-route-id="@menu.Id" 
                   onclick="return confirm('Are you sure to delete the customer')"> Delete </a>
            </div>
        </div>
    }

</div>




