@model Hotel_menu.ViewModel.UpdateViewModel


@{
    ViewData["Title"] = "Update";
    var photoPath = ("~/images/" + (Model.ExistingPhotoPath ?? "noimage.jpg"));
}

<form enctype="multipart/form-data" method="post" asp-action="Update">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h3> Update Item </h3>
    </div>
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="DishName"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="DishName" placeholder="Dish Name" />
                    <span asp-validation-for="DishName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Category"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Category" placeholder="Category" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Description" placeholder="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Price" placeholder="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="  Photo" class="col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input" />
                        <label class="custom-file-label"> Click here to change Photo </label>
                    </div>
                </div>
            </div>
            <img src="@photoPath" asp-append-version="true" />
            <div class="form-group row">
                <div class="col-4">
                    <button type="submit" class="btn btn-info w-50"> Update </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50"> Back </a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts
    {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

</form>


