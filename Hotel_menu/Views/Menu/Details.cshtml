@model Menu

@{
    ViewData["Title"] = "Details";
    var photoPath = ("~/images/" + (Model.Photo ?? "noimage.jpg"));
}


<div class="row justify-content-center" m-3>
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1> @Model.DishName </h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />

                <h4> Dish Name : @Model.DishName </h4>
                <h4> Category : @Model.Category </h4>
                <h4> Price : @Model.Price  </h4>
                <h4> Description : @Model.Description </h4>
            </div>

            <div class="card-footer">
                <a asp-controller="Menu" asp-action="Index" class="btn btn-primary"> Back </a>
                <a asp-controller="Menu" asp-action="Update" class="btn btn-primary" asp-route-id="@Model.Id"> Edit </a>
                <a class="btn btn-primary m-1" asp-action="Delete" asp-route-id="@Model.Id"
                   onclick="return confirm('Are you sure to delete the customer')"> Delete </a>
            </div>
        </div>
    </div>
</div>
