@model Order

@{
    ViewData["Title"] = "Item";
}

<div class="row">
    <h3 class="text-center">
        Fill the details
    </h3>
</div>
<div class="row">
    <div class="col-12">
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Name"></label>
                <div class="col-6">
                    <input type="text" asp-for="Name" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="PhoneNumber"></label>
                <div>
                    <input type="text" asp-for="PhoneNumber" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Quantity"> Select Quantity </label>
                <select class="form-group form-control">
                    <option> Select Quantity </option>
                    <option> 1 </option>
                    <option> 2 </option>
                    <option> 3 </option>
                    <option> 4 </option>
                    <option> 5 </option>
                    <option> 6 </option>
                    <option> 7 </option>
                    <option> 8 </option>
                    <option> 9 </option>
                    <option> 10 </option>
                </select>
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <button type="submit" class="btn btn-info w-50"> Place Order </button>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-danger w-50"> Back </a>
            </div>
        </div>
    </div>
</div>

